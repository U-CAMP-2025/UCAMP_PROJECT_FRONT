{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
